{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/*"],
      "@app/config/*": [
        "./config/*", "./config/*.preval", 
        "./src/config/*", "./src/config/*.preval"
      ],
      "@mono/*": [
        "./node_modules/@atelierfabien/mono-next/*",
        "../../../node_modules/@atelierfabien/mono-next/*"
      ],
      "@slices/*": ["./slices/*"]
    }
  },
  "exclude": ["node_modules"]
}